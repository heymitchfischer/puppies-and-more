    <%= form.text_area :moving_plan, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :emergency_expense %>
    <%= form.check_box :emergency_expense, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :general_expense %>
    <%= form.check_box :general_expense, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :puppy_class %>
    <%= form.check_box :puppy_class, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :obedience_class %>
    <%= form.check_box :obedience_class, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :pet_books %>
    <%= form.text_field :pet_books, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :breed_research %>
    <%= form.check_box :breed_research, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :obedience_recommend %>
    <%= form.check_box :obedience_recommend, class: "form-control" %>
  </div>

  <div class="field form-group">
