  </div>

  <div class="field form-group">
    <%= form.label :obedience_pay %>
    <%= form.check_box :obedience_pay, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :current_vet_name %>
    <%= form.text_field :current_vet_name, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :current_vet_phone %>
    <%= form.text_field :current_vet_phone, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :past_vet_name %>
    <%= form.text_field :past_vet_name, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :past_vet_phone %>
    <%= form.text_field :past_vet_phone, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :references %>
    <%= form.text_area :references, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :assisting_name %>
    <%= form.text_field :assisting_name, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :assisting_phone %>
    <%= form.text_field :assisting_phone, class: "form-control" %>
