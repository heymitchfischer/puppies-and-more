<h1 class="pets-title">Adoptable Pets</h1>


<div class="row">
  <% @animals.each do |animal| %>
    <div class="col-md-4">
      <div class="card outer-card">
        <div class="card inner-card">
          <div class="text-center">
            <%= link_to(animal["url"], target: "_blank") do %>
              <%= image_tag(animal["photos"][0]["large"], class: "card-img-top") %> 
            <% end %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= animal["name"] %></h5>
            <p class="card-text">
              <%= animal["breeds"]["primary"] if animal["breeds"]["primary"] %>
              <br>
              <%= animal["breeds"]["secondary"] if animal["breeds"]["secondary"] %>
              <br>
              <%= animal["age"] %>
              <br>
              <%= animal["gender"] %>
              </p>
              <%= link_to("View Petfinder Profile", animal["url"], target: "_blank", class: "btn btn-primary btn-pet") %>
          </div>  
        </div>
      </div>
    </div>
  <% end %>
</div>


